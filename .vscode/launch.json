{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out", // Change this to your compiled binary's path
            "args": [], // Arguments for your program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", // Use "lldb" if you're on macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Optional: Specify a build task if you want to compile before debugging
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "Enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
